<div class="col-xs-12 <%= section %> project-section" id="<%= section_id %>">
  <div class="col-xs-12 col-sm-6 ">
    <div class="project-info">
      <div class="project-info-title">
        <p><%= title %></p>
      </div>
      <div class="project-info-subtitle">
        <p><%= subtitle %></p>
      </div>
      <div class="project-info-desc">
        <p><%= description %></p>
      </div>
      <% if link %>
        <div class="card-link">
          <i class="fa fa-angle-double-right" aria-hidden="true"></i> <%= link_to "Check It Out", link, target: "_blank", class: "check-out-button" %>
        </div>
      <% end %>
    </div>
  </div>
    <div class="col-xs-12 col-sm-6">
      <div class="project-photos">
        <div id="<%= section %>" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#<%= section %>" data-slide-to="0" class="active"></li>
            <% if picture_two %>
              <li data-target="#<%= section %>" data-slide-to="1"></li>
            <% end %>
            <% if picture_three %>
              <li data-target="#<%= section %>" data-slide-to="2"></li>
            <% end %>
            <% if picture_four %>
              <li data-target="#<%= section %>" data-slide-to="3"></li>
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <center><%= image_tag picture_one, class: "project-photo" %></center>
            </div>
            <% if picture_two %>
              <div class="item">
                <center><%= image_tag picture_two, class: "project-photo" %></center>
              </div>
            <% end %>
            <% if picture_three %>
              <div class="item">
                <center><%= image_tag picture_three, class: "project-photo" %></center>
              </div>
            <% end %>
            <% if picture_four %>
              <div class="item">
                <center><%= image_tag picture_four, class: "project-photo" %></center>
              </div>
            <% end %>
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#<%= section %>" role="button" data-slide="prev" style="background-image:none;">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#<%= section %>" role="button" data-slide="next" style="background-image:none;">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
